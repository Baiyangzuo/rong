extends ../layout/layout

block append css
    if(isMobile)
        link.main(rel="stylesheet", href="/css/top/m.css")
    else
        link.main(rel="stylesheet", href="/css/top/home.css")

block body
    body(class= isMobile ? 'm' : '')
        include app/header
        .content
            include app/banner          
            include app/bar          
            include app/list
            include app/link
            include app/footer
        script(src="/js/top/pages/home.js")
